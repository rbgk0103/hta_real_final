<?xml version="1.0" encoding="UTF-8"?>

<beans 
   xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context="http://www.springframework.org/schema/context"
   xmlns:aop="http://www.springframework.org/schema/aop"
   xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!-- bean -->
	<bean id="adj_vo" class="bean.AdjustVo"/>
	
	<bean id="adj_dao" class="bean.AdjustDao">
		<constructor-arg ref="adj_vo"/>
	</bean>
	
	<!-- controller -->
	<bean id="adj_controller" class="bean.AdjustController">
		<constructor-arg ref="adj_dao"/>
	</bean>
	
	<!-- view resolver -->
	<bean id="view_resolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="./adjust/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
      
</beans>